<apex:page controller="Report_DraftAuths" sidebar="false" docType="html-5.0" readOnly="true" >
<apex:stylesheet value="{!URLFOR($Resource.mentoresd,'/mentoresd.css')}" />
<apex:includeScript value="{!$Resource.jquery}"/>
    <apex:includeScript value="{!URLFOR($Resource.jquery, '/js/jquery-1.7.2.min.js')}" />
    <apex:includeScript value="{!URLFOR($Resource.dataTables, '/dataTables/media/js/jquery.dataTables.min.js')}" />
    <apex:includeScript value="https://raw.github.com/awbush/jquery-fastLiveFilter/master/jquery.fastLiveFilter.js" />
    
    
<script src="https://jquery-datatables-column-filter.googlecode.com/svn/trunk/media/js/jquery.dataTables.columnFilter.js"></script>    
<script>
    function setFocusOnLoad() {}
</script>
<style>
    .left_col{ text-align: left; font-weight: bold; color: #4a4a56 !important; padding: 5px; vertical-align: top; width: 150px;}
.thinking{
    opacity:0.8;
    background-color:#ccc;
    position:fixed;
    width:100%;
    height:100%;
    top:0px;
    left:0px;
    z-index:1000;
}

.thinkingwheel{
    position:absolute; left:50%; top:50%; background-color: white; border: 2px solid gray; padding: 2px;
}   
.mytbl{
    width: 100%;
}  
.dataTables_wrapper{
    margin-top: -52px;
    margin-left: -19px;

}
.pbTitle{
    width: 300px !important;
}
</style>
<apex:form >
    
    
<apex:pageMessages id="messages" ></apex:pageMessages>

<apex:pageBlock id="DraftAuthsPgBlk" title="Authorization Status Report">
<apex:actionregion >
	
	<apex:pageBlockSection columns="1">
	<apex:pageBLockSectionItem >
	<apex:outputPanel layout="none" id="buttonPanel">
       	<apex:commandButton value="Run" 
            action="{!runReport}" 
            reRender="dataTable, tbl_maker, pbsOPTS, messages, buttonPanel" 
            status="myStatus"
            rendered="{!!hasRunOnce}"
            />
      	<apex:commandButton value="Reset" 
            action="{!cancelToNewRun}"
            immediate="true" 
            />
        
    </apex:outputPanel>
       </apex:pageBLockSectionItem> 
  
    <apex:outputPanel >
       <apex:outputLabel styleclass="labelCol" value="Start Date" for="start_date" /> <apex:input type="auto" id="start_date" size="10"  label="Start Date" styleClass="datepicker" value="{! StartDate}" />
       <apex:outputLabel styleclass="labelCol" value="End Date" for="end_date" /> <apex:input type="auto" id="end_date" size="10"  label="End Date" styleClass="datepicker" value="{! EndDate}" />
    </apex:outputPanel>
</apex:pageBlockSection>
      
       <apex:pageBlockSection id="programs" title="Programs (Please select one or more Programs from the below list to view clients.)" columns="1" collapsible="false" >
	    <apex:outputpanel >
	    	<table>
		        <tr><td>
		        <apex:selectList id="selectprograms" value="{!selectedPrograms}" size="7" multiselect="true" style="min-width:235px">
		            <apex:selectOptions value="{!programslist}"/>
		        </apex:selectList>
		        </td><td style="vertical-align:middle">
		        <apex:commandButton value="add" 
						            action="{!AddPrograms}" 
						            reRender="programs, pbsOPTS" 
						            status="myStatus"
						            oncomplete="createtbl()"
						            style="height: 25px; width: 35px;"/><br/>
		        <apex:commandButton value="remove" 
						            action="{!RemovePrograms}" 
						            reRender="programs, pbsOPTS" 
						            status="myStatus"
						            oncomplete="createtbl()"
						            style="height: 25px; width: 50px;"/>		             
		        </td><td>
		        <apex:selectList id="select2" value="{!select2PrmIds}" size="7" multiselect="true" style="min-width:235px">
		        	<apex:selectOptions value="{!select2list}" />
				</apex:selectList>
		        </td></tr>
	 		</table>                   
		</apex:outputPanel>
       </apex:pageBlockSection>       
       
       
	<apex:pageBlockSection id="pbsOPTS"  title="Person Being Served (Please select one or more names from the list. Type a name in the field below to filter the list.)" columns="1" collapsible="false" >
       <div id="pbslinks" style="position:relative; left:180px; top:10px">
       <a href="#" onclick="clearAllPBS();" >Clear</a>&nbsp;&nbsp;
       <a href="#" onclick="selectAllPBS();" >Select All</a>
       </div>
       <Br />
       <apex:outputPanel >
       <br />
       
              <apex:selectCheckboxes html-class="mytbl2" value="{!selectedPBS }" layout="pageDirection" id="chkPBS">
                  <apex:selectOptions value="{!PBSList }"></apex:selectOptions>
              </apex:selectCheckboxes>
       </apex:outputPanel>     
                        
       </apex:pageBlockSection>       
       </apex:actionRegion>
     
</apex:pageBlock>
</apex:form>


<apex:outputPanel id="dataTable">

	<apex:repeat value="{!people}" var="pbs">
	<apex:pageBlock >
	
	<apex:pageBlockSection title="{!people[pbs]}" columns="1" >
	
		<apex:outputPanel rendered="{! authCount[pbs] > 0}">
		
		<apex:pageBlockTable value="{!logMap[pbs]}" var="n" >
		<apex:column headervalue="Received Date/Time">
			<c:MilitaryDatetime datetimeval="{!n.received_date_time__c}"/>
		</apex:column>
		<apex:column headervalue="Authorization Number" value="{!n.payer_authorization_id__c}"/>
		<apex:column headervalue="Type" value="{!n.type__c}{!if (n.type__c == 'Other', ' - ' + n.other_authorization_type__c,'')}"/>
		<apex:column headervalue="Status" value="{!n.authorization_status__c}"/> 
		
		<apex:column headervalue="Reason for New Authorization" value="{!n.reason_for_new_authorization__c}"/>
		<apex:column headervalue="Rate" value="{!n.rate__c}"/>
		<apex:column headervalue="Per" value="{!n.rate_unit__c}"/>
		<apex:column headervalue="Start Date" value="{!n.payer_effective_date__c}" />
		<apex:column headervalue="End Date" value="{!n.payer_end_date__c}" />
		<apex:column headervalue="Contract Used" value="{!n.contract_used__c}" />
		<apex:column headervalue="How Given" value="{!n.Auth_Given_Method__c}" />
		<apex:column headervalue="Created By" value="{!n.createdbyid}"/>
		<apex:column headervalue="Created Date/Time">
		<c:MilitaryDatetime datetimeval="{!n.createddate}"/>
		</apex:column>
		<apex:column headervalue="Last Modified By" value="{!n.lastmodifiedbyid}"/>
		<apex:column headervalue="Last Modified Date/Time">
		<c:MilitaryDatetime datetimeval="{!n.lastmodifieddate}"/>
		</apex:column>
		</apex:pageBlockTable>
		</apex:outputPanel>
		
		<apex:outputPanel rendered="{! authCount[pbs] = 0}">
			MISSING! No authorizations of draft or final status for selected time period.
		</apex:outputPanel>
	
     </apex:pageBlockSection>
     </apex:pageBlock>
      
     
     </apex:repeat>
	
	

</apex:outputPanel>

       
<apex:actionStatus id="myStatus" >
    <apex:facet name="start">
        <div  class="thinking">
            <div class="thinkingwheel">    
                <span><img class="waitingImage" src="/img/loading.gif" title="Please Wait..." />&nbsp; Processing...</span>
            </div>
        </div>   
    </apex:facet>  
    <apex:facet name="stop"> </apex:facet>         
</apex:actionStatus>

<apex:outputPanel id="tbl_maker">
<script>
j$ = jQuery.noConflict();
function createtbl(){
    j$('.mytbl2').dataTable({"bPaginate": false, "bFilter": true, "bRetrieve": true, "aoColumnDefs": [
      { "sTitle": " ", "aTargets": [ 0 ] },],
	"oLanguage": {
    "sSearch": " "
  }
      });
}
j$(document).ready(function(){
    createtbl();
});
function selectAllPBS() {
 	j$('input[id *=chkPBS]').each(function(index,element) {
 		j$(element).prop('checked', true);
 	});
}
function clearAllPBS() {
 	j$('input[id *=chkPBS]').each(function(index,element) {
 		j$(element).prop('checked', false);
 	});
}
</script>
</apex:outputPanel>
</apex:page>