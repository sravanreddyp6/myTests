<apex:page standardController="Authorization__c" extensions="AuthorizationExt" standardStylesheets="false" sidebar="false" tabStyle="Persons_Being_Served_New__tab">

<apex:stylesheet value="{!URLFOR($Resource.mentoresd,'/mentoresd.css')}" />
<apex:includeScript value="{!$Resource.jquery}"/>
<apex:includeScript value="{!URLFOR($Resource.jquery, '/js/jquery-1.7.2.min.js')}" />
<apex:includeScript value="{!URLFOR($Resource.jquery, 'js/jquery-ui-1.8.21.custom.min.js')}" />
<apex:stylesheet value="{!URLFOR($Resource.jquery, 'css/custom-theme/jquery-ui-1.8.21.custom.css')}"/>

<script>
function setFocusOnLoad() {}

var j$ = jQuery.noConflict();
    
</script>

<c:PersonalRecord pbsId="{!pbsID}" parentPage="Authorization" servAssignId="{!saID}" admId="{!admID}"/>

<apex:form id="authForm">
<apex:pageMessages />   
<apex:pageBlock title="Authorization">
<apex:pageBlockButtons >
<div class="pbHeaderButton" style="top: 0px;" >  
        <apex:commandButton action="{!editAuth}" value="Edit" reRender="authForm"  status="myStatus" rendered="{! canEditAuth && authorization.Authorization_Status__c == 'Draft'}" />
        <apex:commandButton action="{!reviseAuth}" value="Revise" reRender="authForm" rendered="{!authorization.Authorization_Status__c == 'Final' && !HasDraft && canEditAuth }"/>  
        <apex:commandButton action="{!finalizeAuth}" value="Finalize" reRender="authForm" status="myStatus" rendered="{! canFinalize && authorization.Authorization_Status__c = 'Draft'}"/>
        <apex:commandButton action="{!cloneAuth}" value="Clone" reRender="authForm" status="myStatus" rendered="{! canFinalize && authorization.Authorization_Status__c != 'Draft'}"/>
</div>
</apex:pageBlockButtons>   

<apex:pageBlockSection collapsible="false" columns="1">
 <apex:outputField value="{!authorization.Authorization_Status__c}" label="Status" /> 
</apex:pageBlockSection>

<apex:pageBlockSection title="Authorization Detail" collapsible="False" columns="2"> 
		
        <apex:pageBlockSectionItem >
        <apex:outputLabel value="Type" />
		<apex:outputPanel layout="none">
        <apex:outputField value="{!authorization.Type__c}"/> <apex:outputField value="{!authorization.Other_Authorization_Type__c}" rendered="{!authorization.Type__c == 'Other'}" />
        </apex:outputPanel>
        </apex:pageBlockSectionItem>
        <apex:outputField value="{!authorization.Reason_for_New_Authorization__c}"/>
        <apex:outputField value="{!authorization.Service_Being_Funded_String__c}" rendered="{!authorization.Type__c != 'Bed Hold'}"/>
        <apex:outputField value="{!authorization.Bed_Hold_Type__c}" rendered="{!authorization.Type__c == 'Bed Hold'}"/>
        <apex:outputField value="{!authorization.Payer_Authorization_ID__c}" label="Authorization Number" rendered='{! authorization.isRootAuth__c}'/>    
        <apex:outputField value="{!authorization.Payer_Authorization_ID__c}" label="Authorization Number" rendered='{! !authorization.isRootAuth__c }'/>
        <apex:outputField value="{!authorization.Rate__c}" rendered="{!authorization.Type__c != 'Bed Hold'}"/>   
        <apex:outputField value="{!authorization.Bed_Hold_Type_Detail__c}" rendered="{!authorization.Type__c == 'Bed Hold'}"/>
        
        <apex:pageBlockSectionItem >
        	<apex:outputLabel value="Received Date/Time" />
        	<c:MilitaryDatetime datetimeval="{!authorization.Received_Date_Time__c}" />
        </apex:pageBlockSectionItem>
        
    	<apex:pageBlockSectionItem rendered="{!authorization.Type__c != 'Bed Hold'}">
        <apex:outputLabel value="Per" />
        <apex:outputPanel layout="none" >
        	<apex:outputField value="{!authorization.Rate_unit__c}" /><apex:outputtext value="&nbsp;{! authorization.rate_unit_other__c}" rendered="{!authorization.Rate_unit__c == 'Other'}" />
        </apex:outputPanel>
        </apex:pageBlockSectionItem>
        <apex:outputField value="{!authorization.Bed_Hold_Additional_Detail__c}" rendered="{!authorization.Type__c == 'Bed Hold'}"/>
        <apex:outputText value="" rendered="{!authorization.Type__c != 'Bed Hold'}"/>
        <apex:pageBlockSectionItem rendered="{!authorization.type__c != 'Single Charge'}">
	        <apex:outputLabel value="{! if (authorization.type__c == 'Bed Hold', 'Start Date', 'Effective Date')}" />
	        <apex:outputField value="{!authorization.Payer_Effective_Date__c}" />
	    </apex:pageBlockSectionItem>
	    <apex:pageBlockSectionItem >
        <apex:outputLabel value="Funding Source" />
        <apex:outputPanel layout="none">
        	<apex:outputField value="{!authorization.Contract_Used__c}"/> <apex:outputField value="{!authorization.Funding_Source__r.Payer_Name__c}" />
        </apex:outputPanel> 
        </apex:pageBlockSectionItem>
        <apex:pageBlockSectionItem rendered="{! authorization.type__c != 'Single Charge'}" >
        	<apex:outputLabel value="{!if(authorization.type__c = 'Open Ended Charge' || authorization.type__c = 'Other' || authorization.type__c = 'Open Ended Stay', 'Review Date', if (authorization.type__c = 'Bed Hold', 'Return Date', 'Last Covered Day'))}"  />
	        <apex:outputField value="{!authorization.Payer_End_Date__c}" label="End Date"/>
	    </apex:pageBlockSectionItem>
	    <apex:outputField value="{!authorization.Level__c}" rendered="{! authorization.type__c != 'Bed Hold' && authorization.type__c != 'Open Ended Charge' && authorization.type__c != 'Other' && authorization.type__c != 'Single Charge'}"/>
	    <apex:outputField value="{!authorization.Auth_Given_Method__c}" rendered="{!authorization.Type__c = 'Single Charge'}"/>
        <apex:outputText value="" rendered="{! authorization.type__c = 'Bed Hold' || authorization.type__c = 'Open Ended Charge' || authorization.type__c = 'Other'}"/>
        <apex:outputField value="{!authorization.Received_From__c}" rendered="{! authorization.type__c != 'Bed Hold' && authorization.type__c != 'Single Charge' }"/>
        <apex:outputField value="{!authorization.Justification__c}" rendered="{! authorization.type__c != 'Open Ended Charge' && authorization.type__c != 'Other' && authorization.type__c != 'Bed Hold' && authorization.type__c != 'Single Charge'}"/>
        <apex:outputText value="" rendered="{! authorization.type__c = 'Open Ended Charge' || authorization.type__c = 'Other'}"/>
        <apex:outputField value="{!authorization.Representing_Received__c}" rendered="{! authorization.type__c != 'Single Charge'}"/>
        <apex:outputText value="" rendered="{! authorization.type__c != 'Open Ended Charge' && authorization.type__c != 'Other' }"/>
        <apex:outputField value="{!authorization.Taken_By__c}" rendered="{! authorization.type__c != 'Open Ended Charge' && authorization.type__c != 'Other' && authorization.type__c != 'Single Charge'}"/>
        <apex:outputText value="" />
        <apex:outputField value="{!authorization.Auth_Given_Method__c}" rendered="{!authorization.type__c != 'Single Charge'}"/>
        
</apex:pageBlockSection>
<apex:pageBlockSection columns="1"> 
<apex:outputField value="{!authorization.Comments__c}" />
</apex:pageBlockSection>
</apex:pageBlock>
</apex:form>

		<apex:pageBlock id="authList" title="Related Authorizations" >
			<apex:outputText value="No Authorizations to display" rendered="{!(relatedAuthsList.size=0)}" />
		<apex:pageBlockTable value="{!relatedAuthsList}" var="auth" rendered="{! relatedAuthsList.size!=0  }">
				<apex:column headervalue="Received">
					<c:MilitaryDatetime datetimeval="{!auth.Received_Date_Time__c}" />
				</apex:column>
				<apex:column value="{!auth.Payer_Authorization_ID__c}"  headervalue="Authorization Number"/>
				<apex:column value="{!auth.Type__c}" headervalue="Type"/>
				<apex:column value="{!auth.Reason_for_New_Authorization__c}" headervalue="Reason for Auth"/>
				<apex:column value="{!auth.Service_Being_Funded_String__c}" headervalue="Item/Service"/>
				<apex:column value="{!auth.Rate__c}" headervalue="Rate"/>
				<apex:column value="{!auth.Rate_Unit__c}" headervalue="Per"/>
				<apex:column value="{!auth.Payer_Effective_Date__c}" headervalue="Start Date"/>
				<apex:column value="{!auth.Payer_End_Date__c}" headervalue="End Date"/>
				<apex:column value="{!auth.Authorization_Status__c}" headervalue="Status"/>
				
			</apex:pageBlockTable>
		</apex:pageBlock>


<c:SObjectNotesAndAttachments parentId="{!authorization.Id}" parentPage="Authorization" pbsID="{!pbsID}" servAssignId="{!saID}" admId="{!admID}" /> 

</apex:page>