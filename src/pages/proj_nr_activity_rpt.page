                    <apex:variable value="{!if($User.Id = a.ProjTaskAct.Assigned_To__c,'isCurUserRow','notCurUserRow')}" var="aMine"/>
                    <tr class="actRow {!aMine} {!a.ProjTaskAct.Status__c}-row">
