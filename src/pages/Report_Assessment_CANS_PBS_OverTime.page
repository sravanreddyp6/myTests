<apex:page showHeader="true" sidebar="false" controller="Report_Assessment_CANS_PBS_OverTime">
<apex:stylesheet value="{!URLFOR($Resource.mentoresd,'/mentoresd.css')}" />
<apex:includeScript value="{!URLFOR($Resource.jquery, '/js/jquery-1.7.2.min.js')}" />
<apex:includeScript value="{!URLFOR($Resource.jquery, '/JQ/jquery-ui.min.js')}" />
<apex:includeScript value="{!URLFOR($Resource.dataTables, '/dataTables/media/js/jquery.dataTables.min.js')}" />
<apex:includeScript value="{!URLFOR($Resource.dataTables, '/dataTables/extensions/TableTools/js/dataTables.tableTools.js')}" />

<apex:stylesheet value="{!URLFOR($Resource.dataTables, '/dataTables/extensions/TableTools/css/dataTables.tableTools.css')}"/>
<apex:stylesheet value="{!URLFOR($Resource.dataTables, '/dataTables/media/css/jquery.dataTables.css')}"/>
<apex:stylesheet value="{!URLFOR($Resource.jquery, '/development-bundle/themes/custom-green/jquery-ui.min.css')}"/>
<style type="text/css">
    .rowScore0{ background-color: white;}
    .rowScore1{ background-color: rgba(255, 255, 0, 0.65);}
    .rowScore2{ background-color: rgba(255, 165, 0, 0.65);}
    .rowScore3{ background-color: rgba(255, 0, 0, 0.65);}
    .groupHeader{background-color: rgb(229, 229, 229); font-weight: bold;}
</style>
<script>
$(document).ready(function() {
console.log('started');
    $('#PBS_TBL').dataTable( {
        "bPaginate": true,
        "ordering": false, 
        "bFilter": true, 
        "bInfo" : false, 
        "bLengthChange": false  
    } );    
} );

</script>
<apex:form >
<h1 style="font-size: 25px; padding: 3px;">CANS Over Time by Person Being Served (Table)</h1>
<apex:pageBlock >
    <apex:pageBlockSection columns="1">
        <apex:selectList required="true" Value="{!SelectedCluster}" size="1" label="Select Cluster">
            <apex:selectOption itemLabel="All" itemValue="All"></apex:selectOption>
            <apex:selectOption itemLabel="Behavior & Risk" itemValue="Behavior & Risk"></apex:selectOption>
            <apex:selectOption itemLabel="Education" itemValue="Education"></apex:selectOption>
            <apex:selectOption itemLabel="Well-Being" itemValue="Well-Being" ></apex:selectOption>
        </apex:selectList>
        <apex:pageBlockSectionItem rendered="false">
            <apex:outputLabel >Find a PBS and press Run!</apex:outputLabel>
            <apex:outputPanel layout="block" style="width: 400px;">
                <table id="PBS_TBL" >
                    <thead><tr><th>Name</th><th>Action</th></tr></thead>
                    <apex:repeat value="{!PBSes}" var="PBS">
                        <tr><td>{!PBS.AccountPerson__r.name}</td><td>
                        <apex:commandButton value="Run!" action="{!runRpt}" reRender="DATA_SET" status="myStatus">
                            <apex:param assignTo="{!selectedPBS}" value="{!PBS.AccountPerson__c}" name="selectedPBS"  />    
                        </apex:commandButton></td></tr>
                    </apex:repeat>
                </table>
                
            </apex:outputPanel>
            
        </apex:pageBlockSectionItem>
       <apex:selectList required="true" size="1" label="Person Being Served" value="{!selectedPBS}" >
           <apex:selectOptions value="{!optPBS}" />
        </apex:selectList>        
        <apex:commandButton value="Run!" action="{!runRpt}" reRender="DATA_SET" status="myStatus"/>
    </apex:pageBlockSection>
</apex:pageBlock>   
</apex:form>


<apex:outputPanel id="DATA_SET">
<apex:pageMessages />
<table id="rptDataTbl">
<thead>
    <tr>
        <th>Interval</th>
        <th>Domain</th>
        <apex:repeat value="{!Columns}" var="col">
            <th>{!col}</th>
        </apex:repeat>
    </tr>
</thead>
<tbody>
    <tr>
        <td>Overall Score</td>
        <td></td>
        <apex:repeat value="{!Columns}" var="col">
            <td >{!mapOverallScore[col]}</td>
        </apex:repeat>          
    </tr>
<apex:repeat value="{!QuestionsNumbersInScope}" var="row">
    <tr>
        <td>{!mapQuestions[row].Question_Title__c}</td>
        <td>{!if(selectedCluster='All' , mapQuestions[row].Question_Domain__r.name, SelectedCluster)}</td>
        <apex:repeat value="{!Columns}" var="col">
            <td class="rowScore{!mapAnswers[TEXT(row)+col].rating__c}">{!mapAnswers[TEXT(row)+col].rating__c}</td>
        </apex:repeat>  
    </tr>
</apex:repeat>
</tbody>
</table>    
<script>
$(document).ready(function() {
console.log('started');
    $('#rptDataTbl').dataTable( {
        "bPaginate": false,
        "ordering": false, 
        "bFilter": false, 
        "bInfo" : false,
        "columnDefs": [
            { "visible": false, "targets": 1 }
        ],
        "order": [[ 1, 'asc' ]],
        "displayLength": 25,
        "drawCallback": function ( settings ) {
            var api = this.api();
            var rows = api.rows( {page:'current'} ).nodes();
            var last=null;
 
            api.column(1, {page:'current'} ).data().each( function ( group, i ) {
                if ( last !== group ) {
                    $(rows).eq( i ).before(
                        '<tr class="group groupHeader"><td class="groupHeader" colspan="99">'+group+'</td></tr>'
                    );
 
                    last = group;
                }
            } );
        },        
            dom: 'T<"clear">lfrtip',        
            "tableTools": {
               "aButtons": [ 
                   {"sExtends": "xls", "sTitle": "Children with Improved CANS at Discharge"},
                   {
                    "sExtends": "pdf",
                    "sPdfOrientation": "landscape",
                    "sTitle": "Children with Improved CANS at Discharge"
                    }              
                ],         
               "sSwfPath": "{!URLFOR($Resource.dataTables, '/dataTables/extensions/TableTools/swf/copy_csv_xls_pdf.swf')}"  
               }       
    } );    
} );

</script>
</apex:outputPanel>




<apex:actionStatus id="myStatus" >
    <apex:facet name="start">
        <style>
            .fogBG{opacity:0.8; background-color:#ccc; position:fixed; width:100%; height:100%; top:0px; left:0px; z-index:100;}
            .thinkingwheel{position: fixed; left:50%; top:50%; background-color: white; border: 2px solid gray; padding: 2px; z-index: 200;}
        </style>
        <div class="fogBG"/>
        <div class="thinkingwheel">    
            <span><img class="waitingImage" src="/img/loading.gif" title="Please Wait..." /> Processing . . . </span>
        </div> 
    </apex:facet>  
    <apex:facet name="stop"> </apex:facet>         
</apex:actionStatus>
</apex:page>