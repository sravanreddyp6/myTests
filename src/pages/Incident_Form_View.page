<apex:page standardcontroller="Incident__c" extensions="Incident_Form_View" sidebar="false" docType="html-5.0" >

<apex:stylesheet value="{!URLFOR($Resource.mentoresd,'/mentoresd.css')}" />
<br/>
<apex:form >
        <apex:pageBlock mode="mainDetail" title="Incident Details">
        	<apex:pageBlockButtons location="top">
	            <div style="float: right;">
	                <apex:CommandButton value="Edit" action="{!edit}" />
	                <apex:CommandButton  value="Review" />
	                <apex:CommandButton  value="Submit" />
	                <apex:CommandButton  value="Disregard" />
	            </div>
        	</apex:pageBlockButtons>
            <apex:pageBlockSection columns="2">
                <apex:outputField value="{!Incident__c.Occurred__c}" />
                <apex:outputField value="{!Incident__c.Reported__c}" />
                <apex:outputField value="{!Incident__c.First_Response__c}" />
                <apex:outputField value="{!Incident__c.Level__c}" />
                <apex:outputField value="{!Incident__c.Outcome__c}" />
                <apex:outputField value="{!Incident__c.Incident_Type__c}" />
                <apex:outputField value="{!Incident__c.Incident_Type_Detail__c}" />
                <apex:outputField value="{!Incident__c.Location__c}" />
                <apex:outputField value="{!Incident__c.Mentor_present__c}" />
                <apex:outputField value="{!Incident__c.TMN_Contact__c}" />
                <apex:outputField value="{!Incident__c.Operating_Group__c}" />
                <apex:outputField value="{!Incident__c.Original_Incident__c }" />
                <apex:outputField value="{!Incident__c.Other_people__c }" />
                <apex:outputField value="{!Incident__c.Others_Present_at_Time_of_Incident__c }" />
                <apex:outputField value="{!Incident__c.Supervised__c }" />
                <apex:outputField value="{!Incident__c.Prior_Revision__c }" />
                <apex:outputField value="{!Incident__c.Service_Assignment__c }" />
                <apex:outputField value="{!Incident__c.Community_Location__c }" />
                <apex:outputField value="{!Incident__c.Other_Location__c }" />
                <apex:outputField value="{!Incident__c.Staff_Present__c }" />
                <apex:outputField value="{!Incident__c.TMN_User__c }" />
                <apex:outputField value="{!Incident__c.State__c }" />
                <apex:outputField value="{!Incident__c.Status__c }" />
                <apex:outputField value="{!Incident__c.Network_Type__c }" />
                <apex:outputField value="{!Incident__c.Internal_Investigation__c }" />
                <apex:outputField value="{!Incident__c.Where_incident_occurred__c }" />
                
            </apex:pageBlockSection>
    </apex:pageBlock>
    
    
<!--     Use this for All ajax calls on this page -->
    <apex:actionStatus id="incidentViewStatus">
		<apex:facet name="start">
			<div style="opacity:0.8; background-color:#ccc; position:fixed; width:100%; height:100%; top:0px; left:0px; z-index:100;"/>
			<div style="position: fixed; left:50%; top:50%; background-color: white; border: 2px solid gray; padding: 2px; z-index: 200;">
					<span><img class="waitingImage" src="/img/loading.gif" title="Please Wait..." /> Processing . . . </span>
				</div>
			</apex:facet>
		<apex:facet name="stop" />
	</apex:actionStatus>
</apex:form>

</apex:page>