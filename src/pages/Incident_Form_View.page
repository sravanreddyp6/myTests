<apex:page standardcontroller="Incident__c" extensions="Incident_Form_View" sidebar="false" docType="html-5.0" >

<apex:stylesheet value="{!URLFOR($Resource.mentoresd,'/mentoresd.css')}" />
<apex:stylesheet value="{!URLFOR($Resource.EvalBootstrap, 'css/bootstrap.css')}" />
<apex:stylesheet value="{!URLFOR($Resource.EvalBootstrap, 'css/blog.css')}" />

<br/>
<c:PersonalRecord pbsId="{!servAssign.Admission__r.Person_Being_Served__c}" servAssignId="{!servAssign.Id}" parentPage="incidentView" admId="{!servAssign.Admission__c}" rendered="{!servAssign.Id != null}"/>
<apex:form >
        <apex:pageBlock mode="mainDetail" title="Incident Details">
        	<apex:pageBlockButtons location="top">
	            <div style="float: right;">
	                <apex:CommandButton value="Edit" action="{!edit}" />
	                <apex:CommandButton value="Review" />
	                <apex:CommandButton value="Submit" />
	                <apex:CommandButton value="Disregard" />
	            </div>
        	</apex:pageBlockButtons>
            <apex:pageBlockSection columns="2">
                <apex:outputField label="Date/Time Incident Occurred" value="{!Incident__c.Date_Occurred__c}" />
                <apex:outputField label="Date/Time Incident Reported to The MENTOR Network" value="{!Incident__c.Date_Reported__c}" />
				<apex:outputField label="First Response Action Taken" value="{!Incident__c.First_Response_Action_Taken__c}" />
                <apex:outputField label="Incident Level" value="{!Incident__c.Incident_Level__c}" />
                <apex:outputField label="Incident Outcome" value="{!Incident__c.Incident_Outcome__c}" />
                <apex:outputField label="Which of the following describe the events?" value="{!Incident__c.Incident_Type__c}" />
                <apex:outputField label="Incident Type-Detailed list" value="{!Incident__c.Incident_Type_Detail__c}" />
                
                <apex:outputField label="Mentor present at the time of the incident?" value="{!Incident__c.Mentor_present__c}" />

                <apex:outputField label="Other people information" value="{!Incident__c.Other_people__c }" />
                <apex:outputField label="Others present at the time of the incident?" value="{!Incident__c.Others_Present_at_Time_of_Incident__c }" />

                <apex:outputField label="Which current service is related to the incident? " value="{!Incident__c.Service_Assignment__c }" />
                <apex:outputField label="Specify Community Location" value="{!Incident__c.Community_Location__c }" />
                <apex:outputField label="Specify Other Location" value="{!Incident__c.Other_Location__c }" />
                <apex:outputField label="Staff present at the time of the Incident?" value="{!Incident__c.Staff_Present__c }" />
                <apex:outputField label="Was an Internal Investigation initiated?" value="{!Incident__c.Internal_Investigation__c }" />
                <apex:outputField value="{!Incident__c.Where_incident_occurred__c }" />

				<apex:outputField value="{!Incident__c.Location__c}" />
                <apex:outputField value="{!Incident__c.TMN_Contact__c}" />
                <apex:outputField value="{!Incident__c.Operating_Group__c}" />
                <apex:outputField value="{!Incident__c.Original_Incident__c }" />
                <apex:outputField value="{!Incident__c.Supervised__c }" />
                <apex:outputField value="{!Incident__c.Prior_Revision__c }" />
                <apex:outputField value="{!Incident__c.TMN_User__c }" />
                <apex:outputField value="{!Incident__c.State__c }" />
                <apex:outputField value="{!Incident__c.Status__c }" />
                <apex:outputField value="{!Incident__c.Network_Type__c }" />                
            </apex:pageBlockSection>
    </apex:pageBlock>
    
    
<!--     Use this for All ajax calls on this page -->
    <apex:actionStatus id="pageProcessing">
		<apex:facet name="start">
			<div style="opacity:0.8; background-color:#ccc; position:fixed; width:100%; height:100%; top:0px; left:0px; z-index:100;"/>
			<div style="position: fixed; left:50%; top:50%; background-color: white; border: 2px solid gray; padding: 2px; z-index: 200;">
					<span><img class="waitingImage" src="/img/loading.gif" title="Please Wait..." /> Processing . . . </span>
				</div>
			</apex:facet>
		<apex:facet name="stop" />
	</apex:actionStatus>
</apex:form>

</apex:page>