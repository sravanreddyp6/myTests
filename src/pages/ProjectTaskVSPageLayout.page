<!-- one div to end all divs!!!-->
<div class="">
    <table >
    <tr style="vertical-align:top" >
        <td>
    <!--header project name goes here-->
        <div class="ProjectHeader">
        <img class="icons" src="https://c.na12.content.force.com/servlet/servlet.ImageServer?id=015U000000039q5&oid=00DU0000000JGf9&lastMod=1335573866000" />
            
            <apex:outputLink value="/{!Project_Task__c.Project__c}">{!Project_Task__c.Project__r.name}</apex:outputLink>
        </div>
    
    <!--task header-->
        <div class="TaskHeader">
         <img class="icons" src="https://c.na12.content.force.com/servlet/servlet.ImageServer?id=015U000000039qK&oid=00DU0000000JGf9&lastMod=1335575044000" />
            <apex:outputField value="{!Project_Task__c.Name}"/>
        </div>
