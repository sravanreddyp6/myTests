                    </td>
                    <td></td>
                </tr>
            </table>
        </apex:pageBlock>
        <hr />

        <apex:pageBlock title="Diagnostics">
            <c:EvaluationResponseTablePDF parentId="{!Evaluation__c.Id}" type="Micro Detail" formId="{!$Component.wholePage}" uniqueId="micro" isPdf="true" />
